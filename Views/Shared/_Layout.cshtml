<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> 
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome 图标 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">




    <!-- 自定义CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("modal", required: false)
</head>
<body>
    <!-- Bootstrap 导航栏 -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!-- 左侧空白占位(保持平衡) -->
                @* <div class="d-none d-lg-flex col-lg-2"></div> *@
                
                <!-- 中间导航图标(居中) -->
                <div class="col-lg-12 d-flex justify-content-center">
                    <!-- 移动端折叠按钮 -->
                    <button class="navbar-toggler ms-auto me-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-center" id="navbarContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index" title="ホーム">
                                    <img src="/images/home.png" class ="navi-image">
                                    <span style="color:#667eea">ホーム</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link head-bond-color" asp-controller="Works" asp-action="Index" title="作業一覧">
                                    <img src="/images/list.png" class="navi-image">
                                    <span style="color:#667eea">作業一覧</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link head-bond-color" asp-controller="Works" asp-action="Gantt" title="作業管理">
                                    <img src="/images/project.png" class="navi-image">
                                    <span style="color:#667eea">作業管理</span>
                                </a>
                            </li>
                            <li class="nav-item head-bond-color">
                                <a class="nav-link" asp-controller="Members" asp-action="Index" title="メンバー">
                                    <img src="/images/member.png" class="navi-image">
                                    <span style="color:#667eea">メンバー</span>
                                </a>
                            </li>
                            <li class="nav-item head-bond-color">
                                <a class="nav-link" href="/Home/Guide" title="利用ガイド">
                                    <img src="/images/tool3.png" class="navi-image">
                                    <span style="color:#667eea">利用ガイド</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- 右侧登录部分 -->
                @* <div class="col-lg-2 d-flex justify-content-end"> *@
                @*     <partial name="_LoginPartial" /> *@
                @* </div>  *@
            </div>
        </nav>
    </header>

    <!-- 主内容区域 -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
            <script src="https://eqcn.ajz.miesnfu.com/wp-content/plugins/wp-3d-pony/live2dw/lib/L2Dwidget.min.js"></script>
            <script>
                //默认使用的萌娘
                L2Dwidget.init({ "model": { jsonPath:
                      "https://unpkg.com/live2d-widget-model-miku@1.0.5/assets/miku.model.json",
                       "scale": 1 }, "display": { "position": "right", "width": 110, "height": 150,
                       "hOffset": 0, "vOffset": -20 }, "mobile": { "show": true, "scale": 0.5 },
                       "react": { "opacityDefault": 0.8, "opacityOnHover": 0.1 } });
            </script>

        </main>
    </div>

    

    <!-- 页脚 -->
    @* <footer class="border-top footer text-muted bg-light" style="font-size: 16px"> *@
    @*     <div class="container py-3"> *@
    @*         <div class="row"> *@
    @*             <div class="col-md-10">                 *@
    @*                 &copy; 2025 - 作業管理 進捗管理ツールを使って効率的に作業を進めよう    *@
    @*             </div> *@
    @*             <div class="col-md-2"> *@
    @*                 <div> *@
    @*                     Design by 開発1部Bグループ *@
    @*                 </div> *@
    @*             </div> *@
    @*         </div> *@
    @*     </div> *@
    @* </footer> *@

    <!-- JavaScript 文件 -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/live2d-widget@latest/lib/L2Dwidget.min.js"></script>

    <script>
        L2Dwidget.init({
            "model": {
                jsonPath: "https://unpkg.com/live2d-widget-model-shizuku@1.0.5/assets/shizuku.model.json",
                "scale": 1
            },
            "display": {
                "position": "right",
                "width": 200,
                "height": 400,
                "hOffset": 0,
                "vOffset": -20
            },
            "mobile": {
                "show": true,
                "scale": 0.5
            },
            "react": {
                "opacityDefault": 0.7,
                "opacityOnHover": 0.2
            }
        });
    </script>
</body>
</html>