<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 图标 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- 自定义CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- 导航栏 -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home me-1"></i>作業管理
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Works" asp-action="Index">
                                <i class="far fa-bars" /></i>作業一覧
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Works" asp-action="Gantt">
                                <i class="fas fa-shield-alt me-1"></i>作業管理
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Works" asp-action="Gantt">
                                <i class="fas fa-shield-alt me-1"></i>メンバー
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Works" asp-action="Gantt">
                                <i class="fal fa-cogs"></i>メンバー
                            </a>
                        </li>
                        @* <li class="nav-item dropdown"> *@
                        @*     <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"> *@
                        @*         <i class="fas fa-cog me-1"></i>管理 *@
                        @*     </a> *@
                            @* <ul class="dropdown-menu"> *@
                            @*     <li><a class="dropdown-item" href="#">用户管理</a></li> *@
                            @*     <li><a class="dropdown-item" href="#">系统设置</a></li> *@
                            @*     <li><hr class="dropdown-divider"></li> *@
                            @*     <li><a class="dropdown-item" href="#">日志查看</a></li> *@
                            @* </ul> *@
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- 主内容区域 -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- 面包屑导航 -->
            <nav aria-label="breadcrumb" class="mt-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">首页</a></li>
                    @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Home")
                    {
                        <li class="breadcrumb-item">
                            <a asp-controller="@ViewContext.RouteData.Values["controller"]">
                                @ViewContext.RouteData.Values["controller"]
                            </a>
                        </li>
                    }
                    <li class="breadcrumb-item active" aria-current="page">
                        @ViewContext.RouteData.Values["action"]
                    </li>
                </ol>
            </nav>

            <!-- 页面内容 -->
            @RenderBody()
        </main>
    </div>

    <!-- 页脚 -->
    <footer class="border-top footer text-muted bg-light">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - 作業管理 進捗管理ツールを使って効率的に作業を進めよう

                </div>
                <div class="col-md-6 text-md-end">                                        
                    <a href="#" class="text-muted me-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-muted"><i class="fab fa-github"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript 文件 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>