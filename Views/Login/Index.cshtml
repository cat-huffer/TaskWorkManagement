@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <title>作業手配</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* 基础样式 */
        /* *是一个通用选择器，用于选中页面上的所有HTML元素。*/
        * {
            margin: 0; /*外边距（margin）设置为0*/
            padding: 0; /*内边距（padding）设置为0*/
            box-sizing: border-box; /*设置所有元素的盒模型为 border-box*/
            font-family: 'Meiryo', 'Yu Gothic', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex; /*弹性盒子。自动调整项目的大小和间距，以适应不同的屏幕尺寸和内容变化*/
            justify-content: center; /*在弹性盒子的主轴方向上对齐子元素*/
            align-items: center; /*在弹性盒子的交叉轴方向上对齐子元素*/
            padding: 20px;

        }

        /* 主标题样式 */
        .login-header h1 { /*后代选择器*/
            color: #2c3e50;
            font-size: 1.8rem; /*设置字体大小*/
            margin-bottom: 10px;
        }

        .login-header p {
            color: #7f8c8d;
            font-size: 1rem;
        }

        .login-header {
            text-align: center; /*设置文本的对齐方式*/
            margin-bottom: 30px;
        }

        /* 登录卡片 */
        .login-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 12px; /*设置元素的边框圆角*/
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2); /*设置元素的阴影效果*/
            padding: 40px;
            width: 100%; /*宽度为父容器的100%*/
            max-width: 900px;
            animation: fadeIn 0.6s ease-out; /*动画名称，表示淡入效果*/
        }


        /* 表单样式 */
        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #2c3e50;
                font-weight: 500; /*字体粗细*/
            }

            .form-group input {
                width: 100%;
                padding: 12px 15px; /*内边距为上下12像素、左右15像素*/
                border: 2px solid #e0e0e0;
                border-radius: 8px;
                font-size: 16px;
                transition: all 0.3s; /*添加0.3秒的过渡效果*/
            }

                .form-group input:focus {
                    border-color: #667eea; /*输入框获得焦点时，边框颜色变为浅蓝色。*/
                    outline: none;
                    box-shadow: 0 0 0 3px rgba(10, 16, 24, 0.2);
                }

        /* 登录按钮 */
        .login-btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer; /*鼠标悬停时显示指针光标*/
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

            .login-btn:hover { /*伪类，把鼠标放在链接上的状态*/
                transform: translateY(-2px); /*鼠标悬停时，按钮向上移动2像素*/
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            }

            .login-btn:active { /*伪类，选择正在活动链接*/
                transform: translateY(0); /*按钮被点击时，恢复到原始位置*/
            }

        /* 错误消息 */
        .error-message {
            color: #d63031;
            font-size: 14px;
            margin-top: 15px;
            text-align: center;
        }

        /* 页脚 */
        .login-footer {
            margin-top: 30px;
            text-align: center;
            color: #7f8c8d;
            font-size: 0.9rem;
        }

        /* 记住我选项 */
        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
        }

            .remember-me input {
                margin-right: 10px;
            }
        /*图片适配*/
        .responsive-image {
            width: 100%;
            height: 500px; /* 设置固定高度 */
            object-fit: cover; /* 裁剪图片以适应容器 */
            padding: 0;
            margin: 0;
        }

    </style>
</head>
<body>
    <div class="login-container">
        <div class="row">
            <div class="col-md-6">
                <img src="~/images/chiikawa.jpg" class="responsive-image"alt="未显示图片" />
            </div>

            <div class="col-md-6">

                <div class="login-header">
                    <h1>作業手配</h1>
                    <p>作業管理ツールを使って効率的に作業を進めよう</p>
                </div>

                <form action="/Login/Login" method="post">
                    <div class="form-group">
                        <label for="UserName">ユーザー名</label>
                        <input type="text" id="UserName" name="UserName" required>
                    </div>

                    <div class="form-group">
                        <label for="Password">パスワード</label>
                        <input type="password" id="Password" name="Password" required>
                    </div>

                    <div class=" remember-me">
                        <input type="checkbox" id="remember" name="remember">
                        <label for="remember">次回から自動でログイン</label>
                    </div>

                    <button type="submit" class="login-btn">ログイン</button>

                    <div class="error-message">
                        @ViewBag.Msg
                    </div>
                </form>

                <div class="login-footer">
                    <p>© 2025 作業手配</p>
                    <p>All Rights Reserved | Design by 開発1部Bグループ</p>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

