@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <title>作業スケジュール</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
        /* 基础样式 */
        body {
            font-family: 'Meiryo', '微软雅黑', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            margin: 0;
            color: #333;
        }

        /* 主标题样式 - 这是您图片中想显示的内容 */
        .main-title {
            text-align: center;
            margin-bottom: 30px;
            color: #2c3e50;
            font-size: 1.8rem;
            font-weight: 500;
            line-height: 1.4;
        }

            /* 中间的点样式 */
            .main-title .dot {
                display: inline-block;
                margin: 0 8px;
                color: #4a6bff;
            }

        /* 登录框样式 */
        .login-box {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 40px;
            width: 100%;
            max-width: 450px;
        }

        /* 表单样式 */
        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
            }

            .form-group input {
                width: 100%;
                padding: 12px 15px;
                border: 2px solid #e0e0e0;
                border-radius: 8px;
                font-size: 16px;
            }

        /* 登录按钮 */
        .login-btn {
            width: 100%;
            padding: 14px;
            background: #4a6bff;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

        /* 错误消息 */
        .error-message {
            color: #d63031;
            font-size: 14px;
            margin-top: 15px;
            text-align: center;
        }

        /* 页脚 */
        .footer {
            margin-top: 30px;
            text-align: center;
            color: #666;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <!-- 这是您图片中想显示的标题 -->
    <h1 class="main-title">
        作業スケジュール<span class="dot">・</span>簡単に仕事の進度を管理する
    </h1>

    <div class="login-box">
        <form action="/Login/Login" method="post">
            <div class="form-group">
                <label for="UserName">ユーザー名</label>
                <input type="text" id="UserName" name="UserName" required>
            </div>

            <div class="form-group">
                <label for="Password">パスワード</label>
                <input type="password" id="Password" name="Password" required>
            </div>

            <div class="form-group">
                <input type="checkbox" id="remember" name="remember">
                <label for="remember">パスワードを記憶する</label>
            </div>

            <button type="submit" class="login-btn">ログイン</button>

            <div class="error-message">
                @ViewBag.Msg
            </div>
        </form>
    </div>

    <div class="footer">
        <p>© 2025 作業スケジュール. All Rights Reserved | Design by 開発１部</p>
    </div>
</body>
</html>