@* Views/Works/Index.cshtml *@
@model TaskWorkManagement.Models.WorkIndexViewModel

@{
    ViewData["Title"] = "任务列表";
}

<h1>作業一覧</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新規タスク作成</a>
</p>

<div class="row align-items-start">
    <div class="col-md-2">
        <div class="card">
            <div class="card-header">
                <h5>メンバー一覧</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var member in Model.Members)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="border-left: 5px solid @member.Color;">
                            @member.MemberName
                            <span class="badge badge-primary badge-pill">@member.MemberWorks.Count</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>任务</th>
                    <th>优先级</th>
                    <th>开始日期</th>
                    <th>截止日期</th>
                    <th>持续时间</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var work in Model.Works)
                {
                    <tr>
                        <td>
                            <span style="display: inline-block; width: 10px; height: 10px; background-color: @work.Color; margin-right: 5px;"></span>
                            @work.Title
                        </td>
                        <td>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= work.Priority ? "text-warning" : "text-muted")"></i>
                            }
                        </td>
                        <td>@work.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@work.DueDate.ToString("yyyy-MM-dd")</td>
                        <td>@work.Duration 天</td>
                        <td>
                            @if (work.IsCompleted)
                            {
                                <span class="badge badge-success">完了</span>
                            }
                            else if (work.DueDate < DateTime.Today)
                            {
                                <span class="badge badge-danger">期限切れ</span>
                            }
                            else
                            {
                                <span class="badge badge-primary">進行中</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@work.WorkId" class="btn btn-sm btn-outline-primary">編集</a>
                            <a asp-action="Details" asp-route-id="@work.WorkId" class="btn btn-sm btn-outline-info">詳細</a>
                            <a asp-action="Delete" asp-route-id="@work.WorkId" class="btn btn-sm btn-outline-danger">削除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>