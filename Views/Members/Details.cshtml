@model TaskWorkManagement.Models.Member

@{
    ViewData["Title"] = "成员详情";
}
<br />
<br />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-purple text-white">
                    <h2 class="text-center mb-0"><i class="bi bi-person-badge me-2"></i>成员详细信息</h2>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-3 text-md-end fw-bold text-muted">
                            @Html.DisplayNameFor(model => model.MemberName)
                        </div>
                        <div class="col-md-9">
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.MemberName)
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-3 text-md-end fw-bold text-muted">
                            @Html.DisplayNameFor(model => model.Position)
                        </div>
                        <div class="col-md-9">
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.Position)
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> 返回列表
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.MemberId" class="btn btn-purple">
                            <i class="bi bi-pencil"></i> 编辑信息
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-purple {
            background-color: #7851A9 !important;
        }

        .btn-purple {
            background-color: #7851A9;
            color: white;
        }

            .btn-purple:hover {
                background-color: #5d3d8a;
                color: white;
            }

        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
            padding: 1.5rem;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
}